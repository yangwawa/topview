<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add top view"
        android:onClick="addNewTopView"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remove top view"
        android:onClick="removeTopview"/>
    <Button
        android:id="@+id/btn_new_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new Dialog"
        android:onClick="showNewDailog"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="106dp" />

    <Button
        android:id="@+id/btn_new_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new Actvity"
        android:onClick="startNewActivity"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="192dp" />
</LinearLayout>

